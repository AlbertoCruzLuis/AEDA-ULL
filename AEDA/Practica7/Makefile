BIN     := bin
SRC     := src
INCLUDE := include
LIBRARIES		:= 
EXECUTABLE  := main

CXX       := g++
CXX_FLAGS := -I$(INCLUDE)

all: $(BIN)/$(EXECUTABLE)

run:
		clear
		@echo "ðŸš€ Executing..."
		./$(BIN)/$(EXECUTABLE)

$(BIN)/$(EXECUTABLE): $(SRC)/*.cpp
		@echo "ðŸš§ Building..."
		$(CXX) $(CXX_FLAGS) $^ -o $@

clean:
		@echo "ðŸ§¹ Clearing..."
		-rm $(BIN)/*